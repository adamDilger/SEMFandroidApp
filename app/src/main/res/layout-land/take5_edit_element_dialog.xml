<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <EditText
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLines="5"
            android:maxLength="150"
            android:id="@+id/element_text_one"
            android:hint="What are the hazards and risks?"
            android:lines="2" />
        <EditText
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLength="150"
            android:maxLines="5"
            android:id="@+id/element_text_two"
            android:hint="How will hazards and risks be controlled?"
            android:linksClickable="true"
            android:lines="2" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RadioGroup
            android:layout_weight="1"
            android:id="@+id/radioGroup"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radioLow"
                android:layout_weight="1"
                android:text="Low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/radioMed"
                android:layout_weight="1"
                android:text="Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/radioHigh"
                android:layout_weight="1"
                android:text="High"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
        <Button
            android:id="@+id/risk_matrix_button"
            android:text="Open Risk Rating Matrix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
