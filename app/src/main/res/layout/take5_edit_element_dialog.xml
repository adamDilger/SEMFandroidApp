<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.adamdilger.semfswms.EditElementDialog">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:inputType="textMultiLine|textCapSentences"
        android:maxLines="5"
        android:maxLength="150"
        android:id="@+id/element_text_one"
        android:hint="What are the hazards and risks?"
        android:lines="2" />
    <RadioGroup
        android:id="@+id/radioGroup"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radioLow"
            android:layout_weight="1"
            android:text="Low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radioMed"
            android:layout_weight="1"
            android:text="Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radioHigh"
            android:layout_weight="1"
            android:text="High"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:inputType="textMultiLine|textCapSentences"
        android:maxLength="150"
        android:maxLines="5"
        android:id="@+id/element_text_two"
        android:hint="How will hazards and risks be controlled?"
        android:linksClickable="true"
        android:lines="2" />
</LinearLayout>
